{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "npm run build",
			"args": [],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "web"
			}
		},
		{
			"type": "shell",
			"label": "test",
			"command": "npm run test",
			"args": [],
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "web"
			}
		},
		{
			"label": "Dev server",
			"type": "shell",
			"command": "dev",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Test",
			"type": "shell",
			"command": "testui",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Setup terminals",
			"dependsOn": [
				"Dev server",
				"Test",
			],
			"dependsOrder": "parallel",
			"problemMatcher": []
		}
	]
}

