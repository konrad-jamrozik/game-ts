{
    // This is vscode workspace settings file for this repository.
    // https://code.visualstudio.com/docs/configure/settings#_workspace-settings

    "files.associations": {
        // LICENSE is by default treated as a markdown file, making it be
        // in purview of markdownlint, creating unwanted warnings.
        // By setting it to plaintext we disable markdownlint for LICENSE.
        "LICENSE": "plaintext"
    },

    // Formatter settings
    // --------------------
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file", // required to format on save
    // Do not format files if dir is missing prettier config.
    "prettier.requireConfig": true,
    "files.autoSave": "off",
    // end of formatter settings

    "typescript.suggest.paths": true,
    "javascript.suggest.paths": true,

    "editor.rulers": [
        80,
        100,
        120
    ],
    "cSpell.words": [
        "bierner",
        "Cheatsheet",
        "Cheatsheets",
        "CICD",
        "dedup",
        "Dexie",
        "docsmsft",
        "EACCES",
        "indexeddb",
        "Jamrozik",
        "modelcontextprotocol",
        "radash",
        "renderable",
        "safehouse",
        "Solarius",
        "sonarjs",
        "substep",
        "undoable",
        "vite",
        "vitest"
    ],
    // https://colors.artyclick.com/color-names-dictionary/color-names/rhino-color
    "peacock.color": "#19426d",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#235b96",
        "activityBar.background": "#235b96",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#4e122f",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#235b96",
        "statusBar.background": "#19426d",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#235b96",
        "statusBarItem.remoteBackground": "#19426d",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#19426d",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#19426d99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "eslint.useFlatConfig": true,
    "eslint.workingDirectories": [
        "web"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // https://code.visualstudio.com/docs/copilot/chat/mcp-servers
    "chat.mcp.enabled": true,
    "chat.mcp.discovery.enabled": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/*.d.ts"
    ],
    "todo-tree.general.tags": [
        "ðŸš§kja",
        "ðŸš§KJA",
    ],
    "todo-tree.highlights.enabled": true,
    "editor.codeLens": false,
    "github.copilot.chat.agent.terminal.allowList": {
        "npm run build": true,
        "npm run test": true,
        "npm run lint": true,
        "npm run dev": true,
        "npm test": true,
        "cd web": true,
        "/cd .*web/": true,
        "/Set-Location.*web/": true,
        "/Set-Location.*web.*npm run test/": true,
        "/Set-Location.*web.*npm run build/": true,
        "/Set-Location.*web.*npm run format.*npm run lint/": true,
    },
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.completionContext.typescript.mode": "on",
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
}
