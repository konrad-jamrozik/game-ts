{
    // This is vscode workspace settings file for this repository.
    // https://code.visualstudio.com/docs/configure/settings#_workspace-settings

    "files.associations": {
        // LICENSE is by default treated as a markdown file, making it be
        // in purview of markdownlint, creating unwanted warnings.
        // By setting it to plaintext we disable markdownlint for LICENSE.
        "LICENSE": "plaintext"
    },

    // Formatter settings
    // --------------------
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file", // required to format on save
    // Do not format files if dir is missing prettier config.
    "prettier.requireConfig": true,
    "files.autoSave": "off",
    // end of formatter settings

    "typescript.suggest.paths": true,
    "javascript.suggest.paths": true,

    "editor.rulers": [
        80,
        100,
        120
    ],
    "cSpell.words": [
        "bierner",
        "Capab",
        "Cheatsheet",
        "Cheatsheets",
        "CHECKMARK",
        "CICD",
        "clickaway",
        "debuffs",
        "dedup",
        "Dexie",
        "docsmsft",
        "EACCES",
        "Elit",
        "Exhs",
        "flexbox",
        "foobarness",
        "highcommander",
        "Hndl",
        "Incap",
        "incentivizes",
        "indexeddb",
        "invst",
        "Jamrozik",
        "jcalz",
        "Ltnt",
        "Malus",
        "mathbf",
        "missiondata",
        "missiondef",
        "modelcontextprotocol",
        "Mult",
        "multiplicatively",
        "ncheck",
        "npmr",
        "ntee",
        "Oper",
        "oxlint",
        "oxlintrc",
        "Pcts",
        "playthrough",
        "qcheck",
        "radash",
        "recov",
        "renderable",
        "safehouse",
        "Sldr",
        "Solarius",
        "sonarjs",
        "substep",
        "succ",
        "Suppr",
        "testui",
        "trainfac",
        "tsgo",
        "tsgolint",
        "Ufopaedia",
        "uicov",
        "unassignment",
        "Unassigns",
        "undoable",
        "vite",
        "vitest",
        "worktree"
    ],
    // https://colors.artyclick.com/color-names-dictionary/color-names/rhino-color
    "peacock.color": "#19426d",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#235b96",
        "activityBar.background": "#235b96",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#4e122f",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#235b96",
        "statusBar.background": "#19426d",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#235b96",
        "statusBarItem.remoteBackground": "#19426d",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#19426d",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#19426d99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "eslint.useFlatConfig": true,
    "eslint.workingDirectories": [
        "web"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // oxlint / oxc extension settings
    // --------------------
    
    "oxc.enable": true,
    "oxc.fmt.experimental": false,
    "oxc.typeAware": false,
    "oxc.requireConfig": true,
    "oxc.configPath": "web/.oxlintrc.json",
    "oxc.tsConfigPath": "web/tsconfig.json",
    "oxc.unusedDisableDirectives": "allow",
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true,
        "windsurf": true,
        "cursor-global": true,
        "cursor-workspace": true
    },
    "todo-tree.filtering.excludeGlobs": [
        "**/*.d.ts"
    ],
    "todo-tree.highlights.enabled": true,
    "editor.codeLens": false,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "files.trimFinalNewlines": true,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "chat.mcp.access": "all",
    "git.showCursorWorktrees": true,
    
}
